<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="teams_view_search" model="ir.ui.view">
            <field name="name">teams.view.search</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="parent_id" string="Parent Organization"/>
                    <field name="staff_partner_ids"/>
                </search>
            </field>
        </record>
        <record id="res_partner_view_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.view.form.inherit</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='contact_addresses']" position="after">
                    <field name="player_count" invisible="1"/>
                    <page string="Players" name="team_players"
                          attrs="{'invisible': [('player_count', '=', 0)]}">
                            <field name="patient_ids" editable="bottom" nolabel="1">
                                <tree>
                                    <field name="first_name"/>
                                    <field name="last_name"/>
                                    <field name="player_status"/>
                                    <field name="is_injured"/>
                                    <field name="injured_since" widget="date"/>
                                    <field name="predicted_return_date" widget="date"/>
                                </tree>
                            </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
